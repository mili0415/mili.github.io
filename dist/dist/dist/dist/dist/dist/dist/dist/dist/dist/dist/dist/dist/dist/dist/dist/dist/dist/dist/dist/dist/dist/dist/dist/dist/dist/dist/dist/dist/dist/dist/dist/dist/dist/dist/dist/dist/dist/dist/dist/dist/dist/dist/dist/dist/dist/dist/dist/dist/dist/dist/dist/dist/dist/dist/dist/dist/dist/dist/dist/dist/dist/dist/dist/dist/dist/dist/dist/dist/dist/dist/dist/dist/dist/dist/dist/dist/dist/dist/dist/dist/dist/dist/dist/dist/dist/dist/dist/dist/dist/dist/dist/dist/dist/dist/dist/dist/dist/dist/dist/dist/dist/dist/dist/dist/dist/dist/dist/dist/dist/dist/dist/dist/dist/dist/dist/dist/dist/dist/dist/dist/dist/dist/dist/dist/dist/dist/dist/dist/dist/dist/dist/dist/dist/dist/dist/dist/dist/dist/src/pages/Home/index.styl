.wrapper
  .item
    margin: 30px
    position: relative
    border: 1px solid #ddd
    border-top: 1px solid #fff
    border-bottom: 1px solid #fff
    background: #fff
    transition: all .2s ease-in
    .article-header
      border-left: 5px solid #4d4d4d
      padding: 30px 0 15px 25px
      padding-left: 7.6923%
      .article-title
        color: #696969
        margin-left: 0
        font-weight: 300
        line-height: 35px
        margin-bottom: 20px
        font-size: 26px
        transition: color .3s
      .article-author
        margin-right: 7.6923%
        float: right
    .article-more-link
      padding-top: 20px
      margin: 30px 7.6923% 0
      min-height: 72px
      border-top: 1px solid #ddd
      text-align:right
      a
        background: #4d4d4d;
        color: #fff;
        font-size: 12px;
        padding: 5px 8px;
        line-height: 16px;
        border-radius: 2px;
        transition: background .3s;
    .article-info
      line-height: 1.8em;
      padding-right: 7.6923%;
      padding-left: 7.6923%;