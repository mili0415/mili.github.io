.article
  font-size: 14px
  color: #333
  .wrapper
    padding-left: 30px
    h1
      font-size: 20px
    h2
      font-size: 18px
    blockquote
      color: #828282
      border-left: 4px solid #05a5d1
      background-color: #fff
      padding: 5px 10px
      font-size: 14px
      font-style: italic
    .author
      font-size: 12px
      color: #000
      text-align:right
    pre
      padding: 10px;
      line-height: 18px;
      border-radius: 2px;
      background-color: #fff;
      border: 1px solid #aaa;
      box-shadow: inset 0 0 3px rgba(2,128,174,.3);
      overflow: auto;
      transition: border-color .2s;
      code
        font-size: 12px
        margin: 0
        padding: 0
        border: none
        background: transparent
        color: #555